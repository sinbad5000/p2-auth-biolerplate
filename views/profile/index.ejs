<body id="profile">
    <div class="container">
    
        <h1>Hi <%= currentUser.name %>, welcome to the app!</h1>  
        <ul>
            <% films.forEach(function(film){ %>
            <li class="list"><%= film.title %></li>
                <form method="POST" action="/profile/films/<%=film.title%>/?_method=DELETE">
    
                <button class="btn btn-primary" type="submit">remove</button>
                </form>
            <%  }) %>
            </ul>
            <ul>
                <% people.forEach(function(person){ %>
                <li class="list"><%= person.name %></li>
                    <form method="POST" action="/profile/people/<%=person.name%>/?_method=DELETE">
     
                    <button class="btn btn-primary" type="submit">remove</button>
                    </form>
                <%  }) %>
            </ul>
            <ul>
                <% locations.forEach(function(location){ %>
                <li class="list"><%= location.name %></li>
                    <form method="POST" action="/profile/locations/<%=location.name%>/?_method=DELETE">
    
                    <button class="btn btn-primary" type="submit">remove</button>
                    </form>
                <%  }) %>
            </ul>
            <ul>
                <% vehicles.forEach(function(vehicle){ %>
                <li class="list"><%= vehicle.name %></li>
                    <form method="POST" action="/profile/vehicles/<%=vehicle.name%>/?_method=DELETE">
    
                    <button class="btn btn-primary" type="submit">remove</button>
                    </form>
                <%  }) %>
            </ul>
    </div> 
</body>